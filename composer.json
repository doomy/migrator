{
    "name": "doomy/migrator",
    "autoload": {
      "classmap": ["src/"]
    },
    "require": {
		"php": ">= 7.1",
		"dibi/dibi": "*",
        "doomy/repository": ">=1.2.5",
        "doomy/ormtopus": "^1.0",
        "symfony/console": "^6.0",
        "doomy/customdibi": "^1.0"
    },
	"minimum-stability": "stable",
    "require-dev": {
        "symplify/easy-coding-standard": "^12.3",
        "phpstan/phpstan": "^1.11"
    },
    "scripts": {
        "check": "clear && vendor/bin/ecs --fix && vendor/bin/phpstan analyse src --level 9"
    }
}
